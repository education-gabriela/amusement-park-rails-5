<%= form_for @attraction, html: {class: "ui form"} do |f| %>
    <div class="five wide field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="five wide field">
      <%= f.label :nausea_rating %>
      <%= f.number_field :nausea_rating %>
    </div>
    <div class="five wide field">
      <%= f.label :happiness_rating %>
      <%= f.number_field :happiness_rating %>
    </div>
    <div class="five wide field">
      <%= f.label :min_height %>
      <%= f.number_field :min_height %>
    </div>
    <div class="five wide field">
      <%= f.label :tickets %>
      <%= f.number_field :tickets %>
    </div>
    <%= f.submit class: "ui primary submit button" %>
<% end %>